<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
         <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
                <FrameLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"/>

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_marginBottom="40dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal|bottom"
                        app:centered="true"
                        app:fillColor="#fffeff"
                        app:pageColor="#b3b3b3"
                        app:snap="false"/>
               <!-- <LinearLayout
                    android:background="#b602242a"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Details"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </LinearLayout>-->
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:background="#bf02242a"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:text="AUDI A6 Silver"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                    <TextView
                        android:textColor="@android:color/white"
                        android:padding="6dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:text="MH1100252"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                </LinearLayout>
            </FrameLayout>




        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"

            card_view:cardPreventCornerOverlap="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="5dp">

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/rel">

                    <de.hdodenhof.circleimageview.CircleImageView

                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cardimage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/face"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#fdfeff"
                        />


                <LinearLayout


                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"
                            android:id="@+id/name" />


                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center_vertical"

                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/star_rating"
                         android:layout_gravity="center_vertical"
                        android:src="@drawable/star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_marginLeft="2dp"
                        android:text="4.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:id="@+id/star"
                        />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/base_fare"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="BaseFare"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/star"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="35dp"



                android:gravity="center_horizontal"
                android:text="15,000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_gravity="left"
                    android:text="7.5 Per Km"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@android:color/holo_red_light"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:text="200 Per Hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />



        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">




            <LinearLayout
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/face"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView

                    android:textStyle="bold"
                    android:text="Front A/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/face"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView

                    android:textStyle="bold"
                    android:text="Front A/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/face"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView

                    android:textStyle="bold"
                    android:text="Front A/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/face"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView

                    android:textStyle="bold"
                    android:text="Front A/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/face"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView

                    android:textStyle="bold"
                    android:text="Front A/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_marginLeft="20dp"

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/face"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView

                    android:textStyle="bold"
                    android:text="Front A/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout

                android:padding="5dp"
                android:layout_marginLeft="20dp"

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/face"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView

                    android:textStyle="bold"
                    android:text="Front A/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

             </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


        <Button
            android:text="Accept"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light"
            android:layout_margin="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

      <!--  <TextView
            android:text="LLLLLLLLLLLL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />-->

       </LinearLayout>
    </ScrollView>
</LinearLayout>